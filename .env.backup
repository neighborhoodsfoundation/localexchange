# LocalEx Development Environment Variables

# Application
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://dev:dev123@localhost:5432/localex_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=localex_dev
DB_USER=dev
DB_PASSWORD=dev123

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# OpenSearch
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200

# S3 (LocalStack)
S3_ENDPOINT=http://localhost:4566
S3_BUCKET=localex-dev
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1

# JWT Authentication
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Feature Flags
FEATURE_BTC_CONVERSION=false
FEATURE_SHIPPING=false
FEATURE_ADVANCED_MATCHING=false
FEATURE_IMAGE_AI=false
FEATURE_READ_ONLY_MODE=false

# External APIs (for development)
EBAY_API_KEY=your-ebay-api-key
GOOGLE_VISION_API_KEY=your-google-vision-api-key
COINBASE_API_KEY=your-coinbase-api-key

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=debug

# Security (development only)
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000
